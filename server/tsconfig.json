{
	"compilerOptions": {
		"allowJs": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitThis":true,
		"strictBindCallApply":true,
		"strictNullChecks":true,
		"strictFunctionTypes":true,
		"strictPropertyInitialization":true,
		"noImplicitUseStrict": true,
		"outDir": "out",
		"rootDir": "src"
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}