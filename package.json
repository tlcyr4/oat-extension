{
    "name": "oat",
    "displayName": "Oat Intellisense",
    "description": "Syntax Highlighting and Code Completion for Princeton COS 320's Oat language",
    "author": "Tigar Cyr",
    "publisher": "tlcyr4",
    "repository": "https://github.com/tlcyr4/oat-extension.git",
    "license": "MIT",
    "icon" : "images/oats_oat_breakfast_healthy.jpg",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:oat"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "oat",
                "aliases": [
                    "Oat",
                    "oat"
                ],
                "extensions": [
                    ".oat"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "oat",
                "scopeName": "source.oat",
                "path": "./syntaxes/oat.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "oat",
                "path": "./snippets.json"
            }
        ],
        "commands": [
            {
                "command": "extension.helloWorld",
                "title": "Hello World"
            }
        ]
    },
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	}
}
